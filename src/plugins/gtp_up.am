vppapitestplugins_LTLIBRARIES += gtpup_test_plugin.la
vppplugins_LTLIBRARIES += gtpup_plugin.la

gtpup_plugin_la_LDFLAGS = $(AM_LDFLAGS) -lurcu-qsbr -lurcu
if ENABLE_DPDK_SHARED
gtpup_plugin_la_LDFLAGS += -ldpdk
else
gtpup_plugin_la_LDFLAGS += -Wl,--whole-archive,-l:libdpdk.a,--no-whole-archive
endif
if WITH_AESNI_MB_LIB
gtpup_plugin_la_LDFLAGS += -Wl,--exclude-libs,libIPSec_MB.a,-l:libIPSec_MB.a
endif
if WITH_ISA_L_CRYPTO_LIB
gtpup_plugin_la_LDFLAGS += -Wl,--exclude-libs,libisal_crypto.a,-l:libisal_crypto.a
endif

gtpup_top_qdir = ${top_srcdir}/../../..
gtpup_qdir = ${gtpup_top_qdir}/install

gtpup_plugin_la_CFLAGS = $(AM_CFLAGS)
gtpup_plugin_la_CFLAGS += -I${gtpup_top_qdir}/ila/src/include/
gtpup_plugin_la_LDFLAGS += -Wl,-lnuma
gtpup_plugin_la_LDFLAGS += -Wl,-lm,-ldl
gtpup_plugin_la_LDFLAGS += -L${gtpup_qdir}/lib/
gtpup_plugin_la_LDFLAGS += -liputil -lqutil -lhiredis -lnetlink -lmnl

gtpup_plugin_la_LIBADD =

gtpup_plugin_la_SOURCES = \
  gtp-up/node.c \
  gtp-up/pfcp.h \
  gtp-up/pfcp.c \
  gtp-up/gtpu_encap.c \
  gtp-up/gtpu_decap.c \
  gtp-up/gtp_up_if_input.c \
  gtp-up/gtp_up_classify.c \
  gtp-up/gtp_up.c \
  gtp-up/gtp_up_api.c \
  gtp-up/gtp_up_sx.c \
  gtp-up/gtp_up_sx_api.c \
  gtp-up/gtp_up_sx_input.c \
  gtp-up/gtp_up_sx_server.c \
  gtp-up/gtp_up.h \
  gtp-up/gtp_up_all_api_h.h \
  gtp-up/gtp_up_msg_enum.h \
  gtp-up/gtp_up_sx.h \
  gtp-up/gtp_up_sx_api.h \
  gtp-up/gtp_ila_if.c

API_FILES += gtp-up/gtp_up.api

nobase_apiinclude_HEADERS +=		\
